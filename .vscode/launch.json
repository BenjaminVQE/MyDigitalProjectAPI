{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug on Docker",
            "type": "php",
            "request": "launch",
            "log": true,
            "pathMappings": {
                "/app": "${workspaceRoot}"
            },
            "port": 9003,
            "xdebugSettings": {
                "max_depth": 3
            }
        },
    ]
}